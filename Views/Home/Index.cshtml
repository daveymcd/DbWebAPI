<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!--Set device screen default scale for Responsive Design-->

    <style>
        .blue {
            color: lightskyblue;
        }

            .blue button {
                background-color: lightskyblue;
            }

            .blue hr {
                border-color: lightskyblue;
            }

        .green {
            color: lightgreen;
        }

            .green button {
                background-color: lightgreen;
            }

            .green hr {
                border-color: lightgreen;
            }

        .red {
            color: lightcoral;
        }

            .red button {
                background-color: lightcoral;
            }

            .red hr {
                border-color: lightcoral;
            }

        button {
            width: 15%;
        }

            button:hover {
                -webkit-transition: all 0.75s ease-out;
                -moz-transition: all 0.75s ease-out;
                -o-transition: all 0.75s ease-out;
                transition: all 1.25s ease-in-out;
                box-shadow: -6px 6px 20px 0 rgba(0,0,0,0.2),-8px 8px 25px 0 rgba(0,0,0,0.19);
            }

        .mainContainer {
            max-width: 100%;
            height: auto;
            margin: 0 6% 0 4%;
            text-align: center;
            justify-content: space-between;
        }

        hr {
            margin: 0  0 auto;
            margin: 0 0 0 0;
        }

        .flexContainerColumn {
            text-align:left; 
            padding:0 0; 
            margin:0 0.5% 0.5% 0; 
            width:100%;
        }
    </style>

    <script>
        function revealDIV(idx) {                                              // reveal/hide detail div when button clicked
            var detail = document.getElementsByClassName("toggle");
            var plusSign = document.getElementsByClassName("revealBut");

            detail[idx].style.transition = "all 1s ease-out 0";
            plusSign[idx].style.transition = "all 1s ease-out 0";
            if (detail[idx].style.display == "none") {
                detail[idx].style.display = "inline";
                //plusSign[idx].style.transform = "rotate(360deg)";
            }
            else {
                detail[idx].style.display = "none";
                //plusSign[idx].style.transform = "rotate(0deg)";
            }
        }
    </script>

    <!-- impose Responsive Design via CSS and JavaScript -->
